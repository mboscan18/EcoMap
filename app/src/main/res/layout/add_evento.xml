<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/bordes_prueba"
     >

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/boton_atras" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:background="@drawable/document"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lay"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <EditText

                android:layout_width="249dp"
                android:layout_height="55dp"
                android:id="@+id/tituloEvento"
                android:layout_gravity="center_horizontal"
                android:text="Nombre del evento"
                android:layout_below="@+id/imageButton3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37dp" />
            <EditText
                android:layout_width="248dp"
                android:layout_height="77dp"
                android:id="@+id/comentario_nuevo_evento"
                android:layout_gravity="center_horizontal"
                android:text="Comentario"
                android:autoText="false" />

            <Spinner
                android:layout_width="246dp"
                android:layout_height="55dp"
                android:id="@+id/cat_event_nuevo"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_above="@+id/lay"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="65dp">

        </LinearLayout>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar evento"
            android:id="@+id/agregarEvento"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/lay"
            android:textStyle="bold"
            android:background="#81c784"
            android:textColor="#fffde7"
            android:layout_alignRight="@+id/imageButton3"
            android:layout_alignEnd="@+id/imageButton3"
            android:layout_alignLeft="@+id/imageButton3"
            android:layout_alignStart="@+id/imageButton3" />


    </RelativeLayout>

</LinearLayout>
